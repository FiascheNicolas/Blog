<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div>
        <nav>
            @* Se necesita importar @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers en viewImports *@
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Panel" asp-action="Edit">Create post</a>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Auth" asp-action="Logout">Logout</a>
            }
            else
            {
                <a asp-controller="Auth" asp-action="Login">Sign in</a>
            }
            <a asp-controller="Panel" asp-action="Index">Admin panel</a>
        </nav>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
